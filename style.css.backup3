.envelopes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 4rem 3rem;
    padding: 2rem 1rem;
    perspective: 1500px;
    justify-items: center;
}

.envelope-wrapper {
    position: relative;
    cursor: pointer;
    width: 100%;
    max-width: 350px;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: envelopeAppear 0.8s ease-out backwards;
}

.envelope-wrapper:nth-child(1) { animation-delay: 0.1s; }
.envelope-wrapper:nth-child(2) { animation-delay: 0.2s; }
.envelope-wrapper:nth-child(3) { animation-delay: 0.3s; }
.envelope-wrapper:nth-child(4) { animation-delay: 0.4s; }
.envelope-wrapper:nth-child(5) { animation-delay: 0.5s; }

@keyframes envelopeAppear {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.envelope-wrapper:hover {
    transform: translateY(-20px) scale(1.05);
}

.envelope {
    position: relative;
    width: 100%;
    max-width: 280px;
    height: 200px;
    margin: 0 auto;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
    filter: drop-shadow(0 15px 40px rgba(0, 0, 0, 0.3));
}

.envelope-body {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 170px;
    background: linear-gradient(135deg, #fef9f3 0%, #f5e6d3 100%);
    border-radius: 8px;
    box-shadow: 
        0 10px 30px rgba(0, 0, 0, 0.2),
        inset 0 2px 4px rgba(255, 255, 255, 0.8),
        inset 0 -2px 4px rgba(139, 69, 19, 0.1);
    z-index: 1;
    overflow: hidden;
}

.envelope-body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        repeating-linear-gradient(
            90deg,
            transparent,
            transparent 20px,
            rgba(139, 69, 19, 0.02) 20px,
            rgba(139, 69, 19, 0.02) 21px
        );
    pointer-events: none;
}

.envelope-body::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        ellipse at top right,
        rgba(255, 107, 157, 0.06) 0%,
        transparent 60%
    );
}

.envelope-flap-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 0;
    width: 100%;
    transform-origin: top center;
    transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 3;
}

.envelope-flap-top::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 140px solid transparent;
    border-right: 140px solid transparent;
    border-top: 95px solid #e8d4b8;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.25));
}

.envelope-wrapper:hover .envelope-flap-top {
    transform: rotateX(-180deg);
}

.envelope-wrapper:hover .envelope-flap-top::before {
    filter: drop-shadow(0 8px 20px rgba(0, 0, 0, 0.4));
}

.envelope-stamp {
    position: absolute;
    top: 25px;
    right: 25px;
