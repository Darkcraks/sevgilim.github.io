/* ==================== CSS VARIABLES ==================== */
:root {
    /* Ana Renkler */
    --primary-pink: #ff6b9d;
    --primary-rose: #c44569;
    --accent-gold: #ffd700;
    --accent-orange: #ffa502;
    --deep-purple: #6c5ce7;
    
    /* Gradientler */
    --gradient-romantic: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-sunset: linear-gradient(135deg, #ff6b9d 0%, #ffa502 100%);
    --gradient-dream: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-sky: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
    
    /* Arka Plan */
    --bg-dark: #1a1a2e;
    --bg-card: rgba(255, 255, 255, 0.05);
    --bg-glass: rgba(255, 255, 255, 0.1);
    
    /* Metin */
    --text-white: #ffffff;
    --text-light: rgba(255, 255, 255, 0.9);
    --text-muted: rgba(255, 255, 255, 0.7);
    
    /* G√∂lgeler */
    --shadow-soft: 0 10px 40px rgba(0, 0, 0, 0.2);
    --shadow-strong: 0 20px 60px rgba(0, 0, 0, 0.4);
    --shadow-glow: 0 0 40px rgba(255, 107, 157, 0.4);
    
    /* Animasyon */
    --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-bounce: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* ==================== RESET & BASE ==================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
    width: 100%;
    height: 100%;
}

body {
    font-family: 'Montserrat', sans-serif;
    background: linear-gradient(135deg, #1a1a2e 0%, #2d1b3d 50%, #1a1a2e 100%);
    color: var(--text-white);
    overflow-x: hidden;
    overflow-y: auto;
    min-height: 100vh;
    width: 100%;
    position: relative;
    margin: 0;
    padding: 0;
}

/* ==================== TYPOGRAPHY ==================== */
.elegant-title {
    font-family: 'Great Vibes', cursive;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    color: var(--text-white);
    text-align: center;
    margin-bottom: 1rem;
    text-shadow: 0 2px 20px rgba(255, 107, 157, 0.5);
    letter-spacing: 2px;
}

.elegant-subtitle {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(1rem, 2vw, 1.3rem);
    color: var(--text-muted);
    text-align: center;
    font-weight: 300;
    letter-spacing: 1px;
}

.title-underline {
    width: 80px;
    height: 3px;
    background: var(--gradient-sunset);
    margin: 1rem auto 2rem;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(255, 107, 157, 0.6);
}

/* ==================== EKRAN Sƒ∞STEMƒ∞ ==================== */
.screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
    z-index: 1;
    overflow: hidden;
}

.screen.active {
    opacity: 1;
    visibility: visible;
    z-index: 10;
}

/* ==================== √áƒ∞√áEKLER VE B√ñCEKLER ==================== */
.flowers-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 5;
    overflow: hidden;
}

/* √ái√ßek Tasarƒ±mlarƒ± */
.flower {
    position: absolute;
    animation: floatFlower 15s ease-in-out infinite;
}

@keyframes floatFlower {
    0%, 100% {
        transform: translateY(0) rotate(0deg);
    }
    50% {
        transform: translateY(-20px) rotate(5deg);
    }
}

/* G√ºl */
.rose {
    width: 50px;
    height: 50px;
    position: relative;
}

.rose-petals {
    width: 100%;
    height: 100%;
    position: relative;
}

.rose-petal {
    position: absolute;
    width: 30px;
    height: 30px;
    background: radial-gradient(circle at top, #ff6b9d, #c44569);
    border-radius: 50% 50% 50% 0%;
    transform-origin: bottom right;
}

.rose-petal:nth-child(1) { transform: rotate(0deg) translateX(-10px); }
.rose-petal:nth-child(2) { transform: rotate(60deg) translateX(-10px); }
.rose-petal:nth-child(3) { transform: rotate(120deg) translateX(-10px); }
.rose-petal:nth-child(4) { transform: rotate(180deg) translateX(-10px); }
.rose-petal:nth-child(5) { transform: rotate(240deg) translateX(-10px); }
.rose-petal:nth-child(6) { transform: rotate(300deg) translateX(-10px); }

.rose-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 15px;
    height: 15px;
    background: radial-gradient(circle, #ffd700, #ffa502);
    border-radius: 50%;
}

/* Papatya */
.daisy {
    width: 45px;
    height: 45px;
    position: relative;
}

.daisy-petal {
    position: absolute;
    width: 15px;
    height: 25px;
    background: linear-gradient(to bottom, #ffffff, #f0f0f0);
    border-radius: 50% 50% 50% 50%;
    top: 50%;
    left: 50%;
    transform-origin: center bottom;
}

.daisy-petal:nth-child(1) { transform: translate(-50%, -100%) rotate(0deg); }
.daisy-petal:nth-child(2) { transform: translate(-50%, -100%) rotate(45deg); }
.daisy-petal:nth-child(3) { transform: translate(-50%, -100%) rotate(90deg); }
.daisy-petal:nth-child(4) { transform: translate(-50%, -100%) rotate(135deg); }
.daisy-petal:nth-child(5) { transform: translate(-50%, -100%) rotate(180deg); }
.daisy-petal:nth-child(6) { transform: translate(-50%, -100%) rotate(225deg); }
.daisy-petal:nth-child(7) { transform: translate(-50%, -100%) rotate(270deg); }
.daisy-petal:nth-child(8) { transform: translate(-50%, -100%) rotate(315deg); }

.daisy-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 18px;
    height: 18px;
    background: radial-gradient(circle, #ffd700, #ffb700);
    border-radius: 50%;
    z-index: 2;
}

/* Lale */
.tulip {
    width: 40px;
    height: 60px;
    position: relative;
}

.tulip-petal {
    position: absolute;
    width: 20px;
    height: 35px;
    background: linear-gradient(to bottom, #ff6b9d, #ff4081);
    border-radius: 50% 50% 20% 20%;
    bottom: 10px;
}

.tulip-petal:nth-child(1) {
    left: 0;
    transform: rotate(-15deg);
}

.tulip-petal:nth-child(2) {
    left: 50%;
    transform: translateX(-50%);
}

.tulip-petal:nth-child(3) {
    right: 0;
    transform: rotate(15deg);
}

.tulip-stem {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 25px;
    background: linear-gradient(to bottom, #2ecc71, #27ae60);
    border-radius: 2px;
}

/* Kelebek */
.butterfly {
    position: absolute;
    width: 40px;
    height: 40px;
    animation: flyButterfly 20s ease-in-out infinite;
}

@keyframes flyButterfly {
    0% {
        transform: translate(0, 0) rotate(0deg);
    }
    25% {
        transform: translate(200px, -100px) rotate(10deg);
    }
    50% {
        transform: translate(400px, 50px) rotate(-10deg);
    }
    75% {
        transform: translate(200px, 150px) rotate(5deg);
    }
    100% {
        transform: translate(0, 0) rotate(0deg);
    }
}

.butterfly-wing {
    position: absolute;
    width: 20px;
    height: 30px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50% 50% 50% 0%;
    animation: flapWing 0.5s ease-in-out infinite;
}

@keyframes flapWing {
    0%, 100% {
        transform: scaleX(1);
    }
    50% {
        transform: scaleX(0.8);
    }
}

.butterfly-wing.left {
    left: 0;
    transform-origin: right center;
}

.butterfly-wing.right {
    right: 0;
    transform-origin: left center;
    transform: scaleX(-1);
}

.butterfly-body {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 4px;
    height: 30px;
    background: linear-gradient(to bottom, #2c3e50, #34495e);
    border-radius: 2px;
}

.butterfly-antenna {
    position: absolute;
    top: 2px;
    width: 1px;
    height: 8px;
    background: #2c3e50;
}

.butterfly-antenna.left {
    left: 18px;
    transform: rotate(-20deg);
}

.butterfly-antenna.right {
    right: 18px;
    transform: rotate(20deg);
}

.butterfly-antenna::after {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 3px;
    background: #2c3e50;
    border-radius: 50%;
}

/* Arƒ± */
.bee {
    position: absolute;
    width: 35px;
    height: 25px;
    animation: flyBee 15s linear infinite;
}

@keyframes flyBee {
    0% {
        transform: translate(0, 0);
    }
    25% {
        transform: translate(300px, -80px);
    }
    50% {
        transform: translate(600px, 20px);
    }
    75% {
        transform: translate(300px, 100px);
    }
    100% {
        transform: translate(0, 0);
    }
}

.bee-body {
    position: absolute;
    width: 25px;
    height: 20px;
    background: linear-gradient(to right, 
        #ffd700 0%, #ffd700 30%, 
        #2c3e50 30%, #2c3e50 40%,
        #ffd700 40%, #ffd700 70%,
        #2c3e50 70%, #2c3e50 80%,
        #ffd700 80%);
    border-radius: 50%;
    left: 5px;
    top: 50%;
    transform: translateY(-50%);
}

.bee-wing {
    position: absolute;
    width: 15px;
    height: 10px;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 50%;
    animation: buzzWing 0.1s ease-in-out infinite;
}

@keyframes buzzWing {
    0%, 100% {
        transform: translateY(0) scaleY(1);
    }
    50% {
        transform: translateY(-2px) scaleY(0.8);
    }
}

.bee-wing.left {
    top: 2px;
    left: 8px;
}

.bee-wing.right {
    top: 2px;
    right: 8px;
}

.bee-head {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #2c3e50;
    border-radius: 50%;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}

.bee-stinger {
    position: absolute;
    right: -5px;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 0;
    border-top: 3px solid transparent;
    border-bottom: 3px solid transparent;
    border-left: 8px solid #2c3e50;
}

/* ==================== PARTICLES BACKGROUND ==================== */
.particles-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.particles-bg::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(255, 107, 157, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(102, 126, 234, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 40% 70%, rgba(255, 165, 2, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 60% 80%, rgba(255, 192, 203, 0.12) 0%, transparent 50%);
    animation: particlesMove 25s linear infinite;
}

.particles-bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
        radial-gradient(circle, rgba(255, 107, 157, 0.08) 1px, transparent 1px);
    background-size: 60px 60px, 80px 80px;
    background-position: 0 0, 40px 40px;
    animation: particlesFloat 30s linear infinite;
}

@keyframes particlesMove {
    0% { transform: translate(0, 0) rotate(0deg); }
    100% { transform: translate(50px, 50px) rotate(360deg); }
}

@keyframes particlesFloat {
    0% { transform: translateY(0); }
    100% { transform: translateY(60px); }
}

.gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at top, rgba(102, 126, 234, 0.12), transparent 50%),
                radial-gradient(ellipse at bottom, rgba(255, 107, 157, 0.12), transparent 50%);
    z-index: 2;
}

