/* Mobil Timeline */
@media screen and (max-width: 768px) {
    .timeline::before {
        left: 30px;
    }
    
    .timeline-icon {
        left: 30px;
        width: 60px;
        height: 60px;
        font-size: 1.7rem;
    }
    
    .timeline-item:nth-child(odd) .timeline-card,
    .timeline-item:nth-child(even) .timeline-card {
        width: calc(100% - 100px);
        margin-left: 100px;
        margin-right: 0;
        padding: 2rem 1.5rem;
        padding-left: 2rem;
        padding-right: 1.5rem;
